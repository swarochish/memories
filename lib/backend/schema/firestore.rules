rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{document} {
      allow create: if request.auth.uid == document;
      allow read: if true;
      allow write: if request.auth.uid == document;
      allow delete: if false;
    }

    match /campaign/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if resource.data.campaign_creator == /databases/$(database)/documents/users/$(request.auth.uid);
      allow delete: if resource.data.campaign_creator == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /campaign_responses/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if resource.data.responder_id == /databases/$(database)/documents/users/$(request.auth.uid);
      allow delete: if resource.data.responder_id == /databases/$(database)/documents/users/$(request.auth.uid);
    }
  }
}
